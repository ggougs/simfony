{% extends 'base.html.twig' %}


{% block body %}
  <h1>{% trans %}Liste des Utilisateurs{% endtrans %}</h1>
  {% set count = allUser | length %}
  

  {% trans %}Il y a %count% utilisateurs{% endtrans %}
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
       {% for user in allUser %}

      <th scope="col">{{ user.name }}</th>
      {% endfor %}
    
    </tr>
  </thead>
  <tbody>
    <tr class="table-active">
      <th scope="row">Prenom</th>
        {% for user in allUser %}

      <th scope="col">{{ user.lastname }}</th>
      
      {% endfor %}
     
      </tr>
    <tr>
      <th scope="row">Email</th>
    {% for user in allUser %}

      <th scope="col">{{ user.email }}</th>
      {% endfor %}
     
    </tr>
    
    <tr class="table-secondary">
      <th scope="row">date de creation</th>
     {% for user in allUser %}

      <th scope="col">{{ user.datecreate|date('Y-m-d')}}</th>
      {% endfor %}
    
    </tr>
    <tr class="table-success">
      <th scope="row">date dernier log</th>
      {% for user in allUser %}

      <th scope="col">{{ user.datelastlogin|date('Y-m-d')}}</th>
      {% endfor %}
     
    </tr>
     <tr class="table-danger">
      <th scope="row">afficher details</th>
       {% for user in allUser %}
      <td><a href= {{ path('usersdetails', {'id':user.id}) }}>details</a></td>
      {% endfor %}
      
    </tr>
    <tr class="table-secondary">
      <th scope="row">Modification user</th>
       {% for user in allUser %}
      <td><a href= {{ path('updateUser', {'id':user.id}) }}>Modifier User</a></td>
      {% endfor %}
      
    </tr>
    <tr class="table-primary">
      <th scope="row">effacer un utilisateur</th>
       {% for user in allUser %}
      <td><a href= {{ path('deleteUser', {'id':user.id}) }}>effacer un utilisateur</a></td>
      {% endfor %}
    </tr>
 
   
   
  </tbody>
</table> 
{% endblock %}